{
  "name": "Device",
  "plural": "Devices",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "id": {
      "type": "string",
      "id": true,
      "required": true
    },
    "userId": {
      "type": "any",
      "required": true,
      "description": "The user id that basically indicates the owner of this device"
    },
    "activated": {
      "type": "boolean",
      "required": false,
      "description": "Indicates whether this device is activated or not"
    },
    "status": {
      "type": "string",
      "required": true,
      "description": "Storage where the app is storing the status of the device (online/offline)"
    },
    "lastData": {
      "type": "object",
      "required": false,
      "description": "Storage where the app is storing the device last received data"
    }
  },
  "validations": [],
  "relations": {
    "owner": {
      "type": "belongsTo",
      "model": "AppUser",
      "foreignKey": "userId"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "login"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "getMyDevices"
    }
  ],
  "methods": {}
}
